<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_search_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.zeitgeist.employee.Activities.SearchOrderActivity"
    tools:showIn="@layout/activity_search_order">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/search_by_customer_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="35dp"
            android:layout_marginBottom="30dp"
            android:text="SEARCH BY CUSTOMER DETAILS"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/search_by_customer_text"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:text="SEARCH CUSTOMER BY"
            android:textSize="25dp"
            android:textAlignment="textEnd"
            android:layout_below="@id/search_by_customer_heading"
            android:layout_alignBaseline="@+id/search_by_customer_type"
            android:textColor="@color/field_name"/>

        <Spinner
            android:id="@+id/search_by_customer_type"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/search_by_customer_text"
            android:layout_below="@id/search_by_customer_heading"
            style="@style/Widget.App.Spinner"
            android:gravity="center"
            android:spinnerMode="dropdown">
        </Spinner>

        <EditText
            android:id="@+id/search_by_customer_data"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="25dp"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textColor="@color/field_name"
            android:background="@drawable/field_bg"
            android:layout_below="@id/search_by_customer_heading"
            android:layout_toRightOf="@id/search_by_customer_type"/>

        <ImageButton
            android:id="@+id/search_by_customer_btn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:padding="20dp"
            android:layout_below="@id/search_by_customer_heading"
            android:layout_toRightOf="@id/search_by_customer_data"
            android:background="@drawable/login_btn_bg"
            android:src="@drawable/ic_search_black_24dp_small"/>

        <TextView
            android:id="@+id/search_by_order_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="35dp"
            android:layout_below="@id/search_by_customer_btn"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="30dp"
            android:text="SEARCH BY ORDER DETAILS"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/search_by_order_text"
            android:layout_width="290dp"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"
            android:text="SEARCH ORDER BY"
            android:textSize="25dp"
            android:layout_below="@id/search_by_order_heading"
            android:layout_alignBaseline="@+id/search_by_order_type"
            android:textColor="@color/field_name"/>

        <Spinner
            android:id="@+id/search_by_order_type"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/search_by_order_text"
            android:layout_below="@id/search_by_order_heading"
            style="@style/Widget.App.Spinner"
            android:gravity="center"
            android:spinnerMode="dropdown">
        </Spinner>

        <Button
            android:id="@+id/search_by_order_data_date"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="25dp"
            android:textColor="@color/field_name"
            android:background="@drawable/field_bg"
            android:layout_below="@id/search_by_order_heading"
            android:layout_toRightOf="@id/search_by_order_type"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/search_by_order_data"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="25dp"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textColor="@color/field_name"
            android:background="@drawable/field_bg"
            android:layout_below="@id/search_by_order_heading"
            android:layout_toRightOf="@id/search_by_order_type"/>

        <ImageButton
            android:id="@+id/search_by_order_btn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:padding="20dp"
            android:layout_marginLeft="360dp"
            android:layout_below="@id/search_by_order_heading"
            android:layout_toRightOf="@id/search_by_order_type"
            android:background="@drawable/login_btn_bg"
            android:src="@drawable/ic_search_black_24dp_small"/>

    </RelativeLayout>

</RelativeLayout>
