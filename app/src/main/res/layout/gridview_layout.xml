<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="166dp"
    android:layout_height="230dp"
    android:background="@color/btn_dark_text"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/grid_image"
        android:padding="3dp"
        android:scaleType="fitCenter"
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="13dp"
        android:src="@mipmap/suit_styling"
        android:background="@drawable/grid_bg_unselected"/>

    <ImageView
        android:id="@+id/check_icon"
        android:layout_margin="13dp"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_check"
        android:visibility="invisible"/>

    <ImageButton
        android:id="@+id/zoom_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_zoom_in_black_24dp"
        android:layout_above="@+id/grid_text"
        android:layout_alignEnd="@+id/grid_image"
        android:background="@drawable/login_btn_bg" />

    <TextView
        android:id="@+id/grid_text"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_margin="13dp"
        android:textAlignment="center"
        android:textColor="@color/field_name"
        android:text="Peak Lapel, Standard Size"
        android:layout_below="@id/grid_image" />
</RelativeLayout>