<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="186dp"
    android:layout_height="wrap_content"
    android:background="@color/btn_dark_text"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/fabric_grid_image"
        android:padding="3dp"
        android:scaleType="fitCenter"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="13dp"
        android:src="@mipmap/suit_styling"
        android:background="@drawable/grid_bg_unselected"/>

    <ImageView
        android:id="@+id/fabric_check_icon"
        android:layout_margin="13dp"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_check"
        android:visibility="invisible"/>

    <ImageButton
        android:id="@+id/fabric_zoom_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_zoom_in_black_24dp"
        android:layout_above="@+id/fabric_grid_text"
        android:layout_alignEnd="@+id/fabric_grid_image"
        android:background="@drawable/login_btn_bg" />

    <TextView
        android:id="@+id/fabric_grid_text"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="@color/field_name"
        android:text="abc9023"
        android:layout_below="@id/fabric_grid_image" />

    <TextView
        android:id="@+id/fabric_stock_text"
        android:layout_width="70dp"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="13dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/field_name"
        android:text="Stock:"
        android:layout_below="@id/fabric_grid_text" />

    <TextView
        android:id="@+id/fabric_stock_data"
        android:layout_width="90dp"
        android:layout_marginBottom="13dp"
        android:layout_height="wrap_content"
        android:textColor="@color/field_name"
        android:text="10000m"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:layout_below="@id/fabric_grid_text"
        android:layout_toRightOf="@id/fabric_stock_text"/>


</RelativeLayout>