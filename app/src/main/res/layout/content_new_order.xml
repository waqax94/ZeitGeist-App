<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_new_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.zeitgeist.employee.Activities.NewOrderActivity"
    tools:showIn="@layout/activity_new_order">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <Button
            android:id="@+id/new_customer_btn"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:text="NEW CUSTOMER"
            android:textSize="25dp"
            android:textColor="@color/btn_light_text"
            android:background="@drawable/light_btn_bg"/>

        <Button
            android:id="@+id/existing_customer_btn"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_below="@id/new_customer_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="EXISTING CUSTOMER"
            android:textSize="25dp"
            android:textColor="@color/btn_light_text"
            android:background="@drawable/light_btn_bg"/>


    </RelativeLayout>

</RelativeLayout>
